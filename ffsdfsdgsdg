-- üß± N√∫t nh·ªè m·ªü/ƒë√≥ng menu
local ToggleButton = Instance.new("ImageButton")
ToggleButton.Parent = ScreenGui
ToggleButton.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
ToggleButton.BorderSizePixel = 0
ToggleButton.Position = UDim2.new(0.05, 0, 0.3, 0)
ToggleButton.Size = UDim2.new(0, 50, 0, 50)
ToggleButton.Image = "rbxassetid://90677395878536"
ToggleButton.Draggable = true

local UICorner2 = Instance.new("UICorner")
UICorner2.CornerRadius = UDim.new(1, 10)
UICorner2.Parent = ToggleButton

-- Bi·∫øn l∆∞u tr·∫°ng th√°i menu
local isOpen = true
local FluentUI = Window -- Menu Fluent c·ªßa b·∫°n

-- üñ±Ô∏è Khi b·∫•m n√∫t ‚Üí m·ªü/ƒë√≥ng menu
ToggleButton.MouseButton1Click:Connect(function()
	isOpen = not isOpen
	if isOpen then
		FluentUI:SelectTab(Tabs.Main0) -- M·ªü l·∫°i giao di·ªán
		FluentUI:Minimize(false)       -- G·ªçi m·ªü menu
	else
		FluentUI:Minimize(true)        -- G·ªçi ƒë√≥ng menu
	end
end)
