---------------------------------------------------
-- üñ±Ô∏è N√∫t m·ªü/ƒë√≥ng menu + hi·ªáu ·ª©ng m·ªù d·∫ßn
---------------------------------------------------
local TweenService = game:GetService("TweenService")
local FluentUI = Fluent.UI or Fluent.Interface
local isOpen = true

local function toggleMenu()
    if not FluentUI then
        for _,v in pairs(game.CoreGui:GetChildren()) do
            if v.Name:lower():find("fluent") then
                FluentUI = v
                break
            end
        end
    end
    if FluentUI then
        isOpen = not isOpen
        if isOpen then
            FluentUI.Enabled = true
            TweenService:Create(FluentUI, TweenInfo.new(0.3), {GroupTransparency = 0}):Play()
        else
            TweenService:Create(FluentUI, TweenInfo.new(0.3), {GroupTransparency = 1}):Play()
            task.delay(0.3, function() FluentUI.Enabled = false end)
        end
    end
end

-- ‚ö° H·ªó tr·ª£ c·∫£ click v√† ch·∫°m c·∫£m ·ª©ng
ToggleButton.MouseButton1Click:Connect(toggleMenu)
ToggleButton.TouchTap:Connect(toggleMenu)
