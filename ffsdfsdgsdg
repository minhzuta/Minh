------------------------------------------------
-- ‚ö° Th√™m ch·ª©c nƒÉng ·∫©n / hi·ªán menu
------------------------------------------------
local menuVisible = true
local TweenService = game:GetService("TweenService")

local function toggleMenu()
	menuVisible = not menuVisible
	local targetTransparency = menuVisible and 0 or 1

	-- L√†m m∆∞·ª£t hi·ªáu ·ª©ng ·∫©n/hi·ªán
	for _, gui in pairs(Window.gui:GetDescendants()) do
		if gui:IsA("Frame") or gui:IsA("TextLabel") or gui:IsA("TextButton") or gui:IsA("ImageLabel") then
			TweenService:Create(gui, TweenInfo.new(0.3), {BackgroundTransparency = targetTransparency, TextTransparency = targetTransparency, ImageTransparency = targetTransparency}):Play()
		end
	end

	-- T·∫Øt t∆∞∆°ng t√°c khi ·∫©n
	Window.gui.Enabled = menuVisible
end

-- üëá B·∫•m n√∫t ƒë·ªÉ ƒë√≥ng/m·ªü menu
ImageButton.MouseButton1Click:Connect(toggleMenu)
