-- ‚ö° ·∫®n/hi·ªán menu (d√†nh cho ƒëi·ªán tho·∫°i)
------------------------------------------------
local menuVisible = true
local TweenService = game:GetService("TweenService")

local function toggleMenu()
	menuVisible = not menuVisible

	local targetTransparency = menuVisible and 0 or 1
	local targetEnabled = menuVisible

	for _, gui in pairs(Window.gui:GetDescendants()) do
		if gui:IsA("GuiObject") then
			local tween = TweenService:Create(gui, TweenInfo.new(0.3), {
				BackgroundTransparency = targetTransparency,
				TextTransparency = targetTransparency,
				ImageTransparency = targetTransparency
			})
			tween:Play()
		end
	end

	Window.gui.Enabled = targetEnabled
end

-- üì± C·∫£m ·ª©ng mobile / PC ƒë·ªÅu ho·∫°t ƒë·ªông
ImageButton.MouseButton1Click:Connect(toggleMenu)
