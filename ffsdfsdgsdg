    Title = "MinhZuTa =}",
    SubTitle = "Free key",
    TabWidth = 157,
    Size = UDim2.fromOffset(450, 300),
    Acrylic = true,
    Theme = "Dark",
})

local Tabs = {
    Main0 = Window:AddTab({ Title = "Gi·ªõi thi·ªáu" }),
    Main1 = Window:AddTab({ Title = "Auto kim c∆∞∆°ng" }),
}

Tabs.Main0:AddButton({
    Title = "Tiktok MinhZuTa",
    Description = "Follow ƒë·ªÉ nh·∫≠n script m·ªõi",
    Callback = function()
        setclipboard("https://www.tiktok.com/@minhzuta")
    end
})

Tabs.Main1:AddButton({
    Title = "Candy Farm",
    Description = "Farm k·∫πo t·ª± ƒë·ªông",
    Callback = function()
        loadstring(game:HttpGet('https://raw.githubusercontent.com/MQPS7/99-Night-in-the-Forset/refs/heads/main/CandyFarm'))()
    end
