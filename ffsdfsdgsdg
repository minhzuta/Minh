-- üìú Menu tr√≤n "MinhZuTa" d√†nh cho PC + Mobile

-- X√≥a GUI c≈© n·∫øu c√≥
if game.CoreGui:FindFirstChild("MinhZuTa") then
    game.CoreGui.MinhZuTa:Destroy()
end

-- T·∫°o ScreenGui
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "MinhZuTa"
ScreenGui.Parent = game.CoreGui
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
ScreenGui.ResetOnSpawn = false

-- N√∫t logo ƒë·ªÉ m·ªü menu
local OpenButton = Instance.new("ImageButton")
OpenButton.Name = "OpenButton"
OpenButton.Parent = ScreenGui
OpenButton.BackgroundTransparency = 1
OpenButton.Size = UDim2.new(0, 60, 0, 60)
OpenButton.Position = UDim2.new(0, 20, 0, 100)
OpenButton.Image = "rbxassetid://86575734561372"
OpenButton.Active = true
OpenButton.Draggable = true

-- Menu h√¨nh tr√≤n
local CircleMenu = Instance.new("ImageLabel")
CircleMenu.Name = "CircleMenu"
CircleMenu.Parent = ScreenGui
CircleMenu.Size = UDim2.new(0, 250, 0, 250)
CircleMenu.Position = UDim2.new(0, 100, 0, 100)
CircleMenu.Image = "rbxassetid://865757345613"
CircleMenu.BackgroundTransparency = 1
CircleMenu.Visible = true
CircleMenu.Active = true
CircleMenu.Draggable = true

-- Hi·ªáu ·ª©ng bo tr√≤n
local UICorner = Instance.new("UICorner")
UICorner.CornerRadius = UDim.new(1, 0)
UICorner.Parent = CircleMenu

-- N√∫t ƒë√≥ng menu (n·∫±m trong menu)
local CloseButton = Instance.new("TextButton")
CloseButton.Parent = CircleMenu
CloseButton.Size = UDim2.new(0, 30, 0, 30)
CloseButton.Position = UDim2.new(0.85, 0, 0.05, 0)
CloseButton.BackgroundColor3 = Color3.fromRGB(255, 50, 50)
CloseButton.Text = "X"
CloseButton.TextColor3 = Color3.fromRGB(255, 255, 255)
CloseButton.Font = Enum.Font.SourceSansBold
CloseButton.TextSize = 18

local CloseCorner = Instance.new("UICorner")
CloseCorner.CornerRadius = UDim.new(1, 0)
CloseCorner.Parent = CloseButton

-- T·∫°o n√∫t ti·ªán l·ª£i
local function createButton(name, pos, callback)
	local Button = Instance.new("TextButton")
	Button.Parent = CircleMenu
	Button.Size = UDim2.new(0, 120, 0, 40)
	Button.Position = pos
	Button.BackgroundColor3 = Color3.fromRGB(60, 60, 70)
	Button.Text = name
	Button.TextColor3 = Color3.fromRGB(255, 255, 255)
	Button.Font = Enum.Font.SourceSansBold
	Button.TextSize = 18
	Button.BackgroundTransparency = 0.2

	local BtnCorner = Instance.new("UICorner")
	BtnCorner.CornerRadius = UDim.new(1, 0)
	BtnCorner.Parent = Button

	Button.MouseButton1Click:Connect(callback)
end

-- N√∫t Fram kim c∆∞∆°ng
createButton("üíé Fram kim c∆∞∆°ng", UDim2.new(0.26, 0, 0.35, 0), function()
	loadstring(game:HttpGet('https://raw.githubusercontent.com/caomod2077/Script/refs/heads/main/FNDayFarm.lua'))()
end)

-- N√∫t Fram k·∫πo
createButton("üç¨ Fram k·∫πo", UDim2.new(0.26, 0, 0.55, 0), function()
	loadstring(game:HttpGet('https://raw.githubusercontent.com/MQPS7/99-Night-in-the-Forset/refs/heads/main/CandyFarm'))()
end)

-- ·∫®n/hi·ªán menu (PC + mobile)
local TweenService = game:GetService("TweenService")
local visible = true

local function toggleMenu()
	visible = not visible
	if visible then
		CircleMenu.Visible = true
		TweenService:Create(CircleMenu, TweenInfo.new(0.3), {Size = UDim2.new(0, 250, 0, 250)}):Play()
	else
		TweenService:Create(CircleMenu, TweenInfo.new(0.3), {Size = UDim2.new(0, 0, 0, 0)}):Play()
		task.wait(0.3)
		CircleMenu.Visible = false
	end
end

OpenButton.MouseButton1Click:Connect(toggleMenu)
CloseButton.MouseButton1Click:Connect(toggleMenu)
