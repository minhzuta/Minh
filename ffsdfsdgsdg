-- üß± T·∫°o ScreenGui + n√∫t m·ªü/ƒë√≥ng menu
local ScreenGui = Instance.new("ScreenGui")
local ToggleButton = Instance.new("ImageButton")
local UICorner = Instance.new("UICorner")

ScreenGui.Parent = game.CoreGui
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

ToggleButton.Parent = ScreenGui
ToggleButton.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
ToggleButton.BorderSizePixel = 0
ToggleButton.Position = UDim2.new(0.05, 0, 0.3, 0)
ToggleButton.Size = UDim2.new(0, 45, 0, 45)
ToggleButton.Draggable = true
ToggleButton.Image = "rbxassetid://90677395878536"

UICorner.CornerRadius = UDim.new(1, 10)
UICorner.Parent = ToggleButton

---------------------------------------------------
-- ü™ü Load Fluent UI
---------------------------------------------------
repeat task.wait() until game:IsLoaded()
local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()

local Window = Fluent:CreateWindow({
	Title = "MinhZuTa =}",
	SubTitle = "Free key",
	TabWidth = 157,
	Size = UDim2.fromOffset(450, 300),
	Acrylic = true,
	Theme = "Dark",
	MinimizeKey = Enum.KeyCode.End
})

local Tabs = {
	Main0 = Window:AddTab({ Title = "Gi·ªõi thi·ªáu" }),
	Main1 = Window:AddTab({ Title = "Auto kim c∆∞∆°ng" }),
}

---------------------------------------------------
-- üåü N√∫t test trong tab
---------------------------------------------------
Tabs.Main0:AddButton({
	Title = "Tiktok MinhZuTa",
	Description = "Follow ƒë·ªÉ nh·∫≠n script m·ªõi",
	Callback = function()
		setclipboard("https://www.tiktok.com/@minhzuta")
	end
})

Tabs.Main1:AddButton({
	Title = "Candy Farm",
	Description = "Farm k·∫πo t·ª± ƒë·ªông",
	Callback = function()
		loadstring(game:HttpGet('https://raw.githubusercontent.com/MQPS7/99-Night-in-the-Forset/refs/heads/main/CandyFarm'))()
	end
})

---------------------------------------------------
-- üîò N√∫t ·∫©n/hi·ªán menu
---------------------------------------------------
local isOpen = true
ToggleButton.MouseButton1Click:Connect(function()
	isOpen = not isOpen
	for _, gui in ipairs(game.CoreGui:GetChildren()) do
		if gui.Name == "Fluent" then
			gui.Enabled = isOpen
		end
	end
end)

---------------------------------------------------
-- ‚å®Ô∏è Ph√≠m t·∫Øt End (·∫©n/hi·ªán lu√¥n)
---------------------------------------------------
game:GetService("UserInputService").InputBegan:Connect(function(input, gp)
	if gp then return end
	if input.KeyCode == Enum.KeyCode.End then
		isOpen = not isOpen
		for _, gui in ipairs(game.CoreGui:GetChildren()) do
			if gui.Name == "Fluent" then
				gui.Enabled = isOpen
			end
		end
	end
end)
